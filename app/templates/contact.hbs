<div class="jumbotron">
  <div class="form">
    <div class="form-group row">
      <div class="col-sm-6">
        <label for="inputEmail">Email Address</label>
        {{input type="email" id="inputEmail" class="form-control" value=emailAddress placeholder="Please type your e-mail address." autofocus="autofocus"}}
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-12">
      <label for="inputMessage">Message</label>
      {{textarea id="inputMessage" class="form-control" value=message placeholder="Your message (At least 5 characters.)" rows=7}}
    </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-4">
        <button class="btn btn-primary btn-block" disabled={{isDisabled}} {{action 'saveInvitation'}}>Submit</button>
      </div>
    </div>

    {{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
    {{/if}}
  </div>
</div>
