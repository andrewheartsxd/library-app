<div class="jumbotron">
  <div class="form">
    <div class={{if emailIsValid "form-group has-feedback row has-success" "form-group has-feedback row"}}>
      <div class="col-sm-6">
        <label for="inputEmail">
          Email Address
        </label>
        <div class="input-group">
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-envelope"></span>
          </div>
          {{input type="email" id="inputEmail" class="form-control" value=emailAddress placeholder="Your e-mail address" autofocus="autofocus"}}
          <span class={{if emailIsValid "glyphicon glyphicon-ok form-control-feedback has-success" "d-none"}} aria-hidden="true"></span>
        </div>
      </div>
    </div>
    <div class={{if messageIsValid "form-group has-feedback row has-success" "form-group has-feedback row"}}>
      <div class="col-sm-10">
        <label for="inputMessage">Message</label>
        {{textarea id="inputMessage" class="form-control" value=message placeholder="Your message (At least 5 characters)" rows=7}}
        <span class={{if messageIsValid "glyphicon glyphicon-ok form-control-feedback has-success message-feedback-icon"}} aria-hidden="true"></span>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-4">
        <button class="btn btn-primary btn-block" disabled={{unless isValid true false}} {{action 'submitMessage'}}>Submit</button>
      </div>
    </div>

    {{#if responseMessage}}
      <div class="alert alert-success">{{responseMessage}}</div>
    {{/if}}
  </div>
</div>
